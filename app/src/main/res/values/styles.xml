<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MyButtonStyle">
        <item name="android:background">@color/red</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="MyButtonStyle2">
        <item name="android:background">@color/black</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.App.TextInputLayout.OutlinedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!-- Цвет границы в обычном состоянии -->
        <item name="boxStrokeColor">@color/text_input_box_stroke</item>
    </style>
    <style name="AppTheme.EditRecord" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="MyActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="displayOptions">showHome|homeAsUp|showTitle</item>
        <item name="icon">@mipmap/ic_launcher</item> <!-- Иконка приложения -->
    </style>
</resources>